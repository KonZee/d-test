.menu-container
	max-width vw(160)
	display flex

.menu
	background #76b945
	color #ededed
	fill currentColor
	display flex
	flex-direction column
	font-size vw(50)
	font-weight bold
	flex 0 0 auto
	position relative
	z-index 10
	overflow hidden

	a
		color inherit
		text-decoration none

	&__item
		display flex
		cursor pointer
		padding vw(43)

		svg
			display block
			fill inherit
			height auto
			width vw(70)
			flex 0 0 auto

		span
			display block
			margin-left vw(70)
			margin-top 0.35vw
			flex 1 0 auto

		&--link
			border-left 0.3vw solid transparent
			transition 350ms background, 350ms border-color
			&:hover
			&.active
				border-left-color #ededed
				background #66a13b
		&--exit
			background #66a13b
			padding 1.9vw vw(43)

		&--hamburger
			padding 0.7vw vw(43)
			background #66a13b
			height vw(104)
			display flex
			justify-content center
			align-items center

	// Menu flex
	&__top-part
		flex 1 0 auto
	&__bottom-part
		flex 0 0 auto

.hamburger
	display block
	position relative
	width vw(50)
	height 0.3vw
	background #ededed
	transition height 250ms linear
	&:before
	&:after
		display block
		content ""
		position absolute
		width vw(50)
		height 0.3vw
		background inherit
		transition all 250ms linear
	&:before
		top -0.8vw
	&:after
		bottom -0.8vw

// Open/close menu
#menuswitch
	display none
	& ~ .menu-container
		.menu
			width vw(160)
			transition 250ms width linear
	& ~ .content-container .content
		left 0
		transition left 250ms linear
	&:checked
		& ~ .menu-container
			.menu
				width vw(450)
			.hamburger
				height 0
				&:before
					top -0.15vw
					transform rotate(45deg)
				&:after
					bottom -0.15vw
					transform rotate(-45deg)
		& ~ .content-container .content
			left vw(450 - 160)
